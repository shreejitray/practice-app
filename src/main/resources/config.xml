<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="

http://www.springframework.org/schema/beans

http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="queryService" class="com.QueryService"/>

    <bean id="interceptor" class="com.Interceptor"/>

    <bean id="methodProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="queryService"/>
        <property name="interceptorNames">
            <list>
                <idref bean="interceptor"/>
            </list>
        </property>
        <property name="proxyTargetClass" value="true"/>
    </bean>
</beans>
